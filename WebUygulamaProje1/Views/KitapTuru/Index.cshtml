@model List<KitapTuru>
@if (TempData["basarili"] != null)
{
    <h2 style="color:red;">@TempData["basarili"]</h2>
}
@{
    ViewData["Title"] = "Kitap Türleri";
}

<div class="container">
    <div class="row pt-3 pb-4">
        <div>
            <h1>Kitap Türü Sayfası</h1>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kitap Türleri</th>
                <th></th>
                <th></th>
            <tr />
        </thead>
        <tbody>
            @foreach (var kitapTuru in Model)
            {
                <tr>
                    <td>@kitapTuru.Id</td>
                    <td>@kitapTuru.Ad</td>
                    <td>
                        <a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@kitapTuru.Id" type="button" class="btn btn-success" style="width:200px;">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@kitapTuru.Id" type="button" class="btn btn-danger" style="width:200px;">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary">
                Yeni Kitap Türü Ekle
            </a>
        </div>
    </div>
</div>



