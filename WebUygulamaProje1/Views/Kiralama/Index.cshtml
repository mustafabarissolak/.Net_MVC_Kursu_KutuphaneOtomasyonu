@model List<Kiralama>;
@if (TempData["basarili"] != null)
{
    <h2 style="color:red;">@TempData["basarili"]</h2>
}
@{
    ViewData["Title"] = "Kiralama";
}

<div class="container">
    <div class="row pt-3 pb-4">
        <div>
            <h1>Kiralama Sayfası</h1>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Öğrenci Adı</th>
                <th>Kitap Id</th>
                <th></th>
                <th></th>
            <tr />
        </thead>
        <tbody>
            @foreach (var kiralama in Model)
            {
                <tr>
                    <td>@kiralama.Id</td>
                    <td>@kiralama.OgrenciId</td>
                    <td>@kiralama.Kitap.KitapAdi</td>
                    <td>
                        <a asp-controller="Kiralama" asp-action="EkleGuncelle" asp-route-id="@kiralama.Id" type="button" class="btn btn-success" style="width:200px;">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="Kiralama" asp-action="Sil" asp-route-id="@kiralama.Id" type="button" class="btn btn-danger" style="width:200px;">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Kiralama" asp-action="EkleGuncelle" class="btn btn-lg btn-primary">
                Yeni Kiralama Kaydı Oluştur
            </a>
        </div>
    </div>
</div>



